<% jobsList.forEach((job)=>{ %>
<div class="card" style="width: 18rem">
  <div class="card-body">
    <h5 class="card-title"><%= job.companyName %></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary"><%= job.category %> : <%= job.designation %></h6>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= job.location %></li>
      <li class="list-group-item"><%= job.salary %></li>
      <li class="list-group-item">
        <% job.skillsRequired.forEach((skill)=>{ %>
            <button type="button" class="btn btn-outline-primary"><%= skill %></button>
        <% }) %>
      </li>
    </ul>
    <a href="/job/<%= job.id %>" class="btn btn-primary">View Details</a>
  </div>
</div>
<% }) %>
